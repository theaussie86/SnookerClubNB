{
  "openapi": "3.0.0",
  "info": {
    "title": "Snooker Club NB Website API",
    "description": "API für statische Website des Snooker Club NB",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://snooker-nb.vercel.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health Check",
        "description": "Überprüft den Status der Website",
        "responses": {
          "200": {
            "description": "Website ist erreichbar",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClubInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Snooker Club NB"
          },
          "address": {
            "type": "string",
            "example": "Musterstraße 123, 12345 Musterstadt"
          },
          "phone": {
            "type": "string",
            "example": "+49 123 456789"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "info@snooker-nb.de"
          },
          "website": {
            "type": "string",
            "format": "uri",
            "example": "https://snooker-nb.de"
          }
        }
      },
      "LegalInfo": {
        "type": "object",
        "properties": {
          "legalName": {
            "type": "string",
            "example": "Snooker Club NB e.V."
          },
          "address": {
            "type": "string",
            "example": "Musterstraße 123, 12345 Musterstadt"
          },
          "phone": {
            "type": "string",
            "example": "+49 123 456789"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "info@snooker-nb.de"
          },
          "responsiblePerson": {
            "type": "string",
            "example": "Max Mustermann"
          }
        }
      }
    }
  }
}
